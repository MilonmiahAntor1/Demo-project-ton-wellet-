  <script>
    // ‚úÖ Create TON Connect UI instance
    const tonConnectUI = new TON_CONNECT_UI.TonConnectUI({
      manifestUrl: "https://your-domain.com/tonconnect-manifest.json", // ‚Üê ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶§‡ßã‡¶Æ‡¶æ‡¶∞ ‡¶Ü‡¶∏‡¶≤ URL ‡¶¨‡¶∏‡¶æ‡¶ì
    });

    // ‚úÖ Wallet connect/disconnect logic
    async function toggleWallet() {
      const account = tonConnectUI.account;
      if (!account) {
        try {
          await tonConnectUI.connectWallet();
          const acc = tonConnectUI.account;
          if (acc) {
            document.getElementById("wallet-address").innerText =
              "‚úÖ Connected: " + acc.address;
            document.getElementById("btn-text").innerText = "Disconnect TON Wallet";
          }
        } catch (err) {
          document.getElementById("wallet-address").innerText = "‚ùå Connection failed!";
        }
      } else {
        document.getElementById("disconnect-popup").classList.remove("hidden");
      }
    }

    async function confirmDisconnect() {
      try {
        await tonConnectUI.disconnect();
        document.getElementById("wallet-address").innerText = "üîå Wallet disconnected!";
        document.getElementById("btn-text").innerText = "Connect TON Wallet";
      } catch (err) {
        document.getElementById("wallet-address").innerText = "‚ùå Disconnect failed!";
      }
      closePopup();
    }

    function closePopup() {
      document.getElementById("disconnect-popup").classList.add("hidden");
    }
